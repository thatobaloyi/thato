{
  "version": 2,
  "builds": [
    {
      "src": "backend/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend/build/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/projects", "dest": "backend/$1" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
